@model StoreWeb.Models.LoginViewModel
@{
    ViewData["Title"] = "Employee Login";
}

<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
            <div class="row text-white">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <h1 class="display-4 py-2 text-truncate">Welcome to Mann's Videogame Shoppe</h1>
                    <div class="px-2">
                        <form asp-action="Login" class="justify-content-center">
                            <div class="form-group">
                                @*<label asp-for="Username"></label>*@
                                <input asp-for="Username" type="text" class="form-control shadow-lg"
                                       id="Username" placeholder="Enter Username">
                            </div>
                            <div class="form-group">
                                @*<label asp-for="Password"></label>*@
                                <input asp-for="Password" type="password" class="form-control shadow-lg"
                                       id="password" placeholder="Enter Password">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login"
                                       class="btn btn-info" onclick="onclick="Login('Manager')" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</section>